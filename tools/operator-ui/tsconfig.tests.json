{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "types": ["node"],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "outDir": "tests/dist",
    "noEmit": false,
    "esModuleInterop": true
  },
  "include": [
    "tests/**/*.ts",
    "src/api/types.ts",
    "src/algorithms/**/*.ts"
  ]
}
